{
  "metadata": {
    "title": "3chameaux.com",
    "description": "MetalSmith powered"
  },
  "plugins": {
    "metalsmith-paths": {},
    "metalsmith-imagemin": {
        "optimizationLevel": 3
    },
    "metalsmith-register-helpers": {},
    "metalsmith-i18n": {
      "default": "fr",
      "locales": ["en", "fr"],
      "directory": "locales"
    },
    "metalsmith-in-place": {
      "engine": "handlebars",
      "partials": "partials"
    },
    "metalsmith-markdown": {
      "breaks": false,
      "smartLists": false,
      "gfm": true
    },
    "metalsmith-sass": {
      "sourceMap": true,
      "outputStyle": "expanded",
      "sourceMapContents": true
    },
    "metalsmith-layouts": {
      "engine": "handlebars"
    },
    "metalsmith-serve": {
      "port": 8081,
      "verbode": true,
      "document_root": "./build"
    },
    "metalsmith-watch": {
      "livereload": true,
      "paths": {
        "src/**/*": true,
        "partials/*": "src/*",
        "layouts/*": "src/*"
      }
    }
  }
}