{
  "metadata": {
    "title": "3chameaux.com",
    "description": "MetalSmith powered"
  },
  "plugins": {
    "metalsmith-paths": {},
    "metalsmith-register-helpers": {},
    "metalsmith-i18n": {
      "default": "fr",
      "locales": ["en", "fr"],
      "directory": "locales"
    },
    "metalsmith-in-place": {
      "engine": "handlebars",
      "partials": "partials"
    },
    "metalsmith-markdown": {},
    "metalsmith-layouts": {
      "engine": "handlebars"
    },
    "metalsmith-serve": {
      "port": 8081,
      "verbode": true,
      "document_root": "./build"
    },
    "metalsmith-watch": {
      "paths": {
        "src/*": true
      }
    }
  }
}
